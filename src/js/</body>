<script>
function openCountryPage(countryId) {
    // Ülke detay sayfalarına yönlendirme
    const countryPages = {
        'usa': 'countries/united-states.html',
        'eu': 'countries/european-union.html', 
        'china': 'countries/china.html',
        'japan': 'countries/japan.html',
        'south-korea': 'countries/south-korea.html',
        'singapore': 'countries/singapore.html',
        'uk': 'countries/united-kingdom.html',
        'canada': 'countries/canada.html',
        'australia': 'countries/australia.html',
        'india': 'countries/india.html',
        'brazil': 'countries/brazil.html',
        'uae': 'countries/uae.html'
    };
    
    if (countryPages[countryId]) {
        window.open(countryPages[countryId], '_blank');
    }
}

// Tooltip functionality (opsiyonel)
document.querySelectorAll('.country-marker').forEach(marker => {
    marker.addEventListener('mouseenter', function(e) {
        const countryName = e.target.getAttribute('data-country');
        // Burada tooltip gösterebilirsiniz
        console.log('Hovering over:', countryName);
    });
});
</script>
